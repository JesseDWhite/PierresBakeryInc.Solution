@{
  Layout = "_Layout";
}
<h1>Create A New Vendor</h1>
<p>Fill out the form below and a new vendor will be added to your list:</p>
<div class="container">
  <form action="/vendors" method="post">
    <label for="vendorName" class="form-label">Vendor Name</label>
    <input type="text" name="vendorName" id="vendorName" class="form-control">
    <label for="description">Vendor Description</label>
    <input type="text" name="description" id="description" class="form-control">
    <button class="btn btn-success col-6" type="submit">Add Vendor</button>
  </form>
</div>