@{
  Layout = "_Layout";
}
@using PierresBakeryInc.Models;

<h3>Here are all of the orders for @Model["vendor"].VendorName</h3>
<h5>Vendor Description: @Model["vendor"].Description</h5>

<ol>
  @foreach (Order order in @Model["orders"])
  {
    <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.OrderItem</a></li>
  }
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a New Order</a></p>
<p><a href='/vendors'>Return to Vendor List</a></p>
<p><a href='/'>Back to Homepage</a></p>