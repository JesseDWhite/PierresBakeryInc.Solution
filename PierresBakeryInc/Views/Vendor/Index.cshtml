@{
  Layout = "_Layout";
}
@using PierresBakeryInc.Models;

<h1>Current Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You currently do not have any active vendors.</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3>
    <a href='/vendors/@vendor.Id'><button class="btn btn-info">@vendor.VendorName</button></a>
  </h3>
}